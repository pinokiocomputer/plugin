{
  "run": [{
    "when": "{{platform === 'win32'}}",
    "id": "run",
    "method": "shell.run",
    "params": {
      "shell": "{{which('bash', /exe/i)}}",
      "conda": {
        "skip": true
      },
      "env": {
        "CLAUDE_CODE_GIT_BASH_PATH": "{{which('bash', /exe/i)}}"
      },
      "message": "npx -y @anthropic-ai/claude-code@latest",
      "path": "{{args.cwd}}",
      "input": true,
      "buffer": 1024
    }
  }, {
    "when": "{{platform !== 'win32'}}",
    "id": "run",
    "method": "shell.run",
    "params": {
      "message": "npx -y @anthropic-ai/claude-code@latest",
      "path": "{{args.cwd}}",
      "input": true,
      "buffer": 1024
    }
  }]
}
